<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ConfigFragment">


    <TextView
        android:id="@+id/textViewHeaderF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:text="FormulÃ¡rio de Cadastro"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="14pt"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/editTextNomeF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:hint="Nome"
        android:background="@drawable/rounded_corner_grey"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextCpfF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:autofillHints=""
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextCpfF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:inputType="number"
        android:paddingLeft="16dp"
        android:hint="CPF"
        android:background="@drawable/rounded_corner_grey"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmailF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextEmailF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:hint="Email"
        android:background="@drawable/rounded_corner_grey"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextSenhaF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:inputType="textEmailAddress"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextSenhaF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:hint="Senha"
        android:background="@drawable/rounded_corner_grey"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSalvarF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:autofillHints=""
        android:inputType="textPassword" />



    <Button
        android:id="@+id/buttonSalvarF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALVAR"
        android:background="@drawable/rounded_corner_accent"
        android:textSize="12pt"
        android:textColor="@color/colorBackGround"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>